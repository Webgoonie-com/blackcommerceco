{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": [
        "../public/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/orm/*": [
        "../api-prisma/src/utils/*"
      ],
    }
  },
  "include": ["next-env.d.ts",  "**/*.mjs", "**/*.ts", "**/*.tsx", "**/**/*.ts", "**/**/*.tsx","dist/types/**/*.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
